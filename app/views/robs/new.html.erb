<%= form_with(model: @robs, local: true) do |form| %>
<% if @robs.errors.any? %>
    <div id="error_explanation">
      <h2><%= @robs.errors.count %>errors occurred.</h2>
      <ul>

      <% @robs.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
   
  <div class="blog_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
   <%= form.submit %>
<% end %>
